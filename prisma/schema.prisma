generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Driver {
  ID      String  @id @default(uuid())
  Name    String  @db.VarChar(255)
  Email   String  @unique @db.VarChar(255)
  Phone   String? @db.VarChar(15)
}
